{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@assets/images/*": ["assets/images/*"],
      "@assets/icons/*": ["assets/icons/*"],
      "@components/*": ["components/*"],
      "@components/common/*": ["components/common/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@services/api/*": ["services/api/*"],
      "@services/auth/*": ["services/auth/*"],
      "@services/storage/*": ["services/storage/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
